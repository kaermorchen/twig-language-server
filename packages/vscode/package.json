{
  "name": "vscode-twig",
  "displayName": "Modern Twig",
  "description": "A Twig extension for VS Code",
  "author": "Stanislav Romanov <kaermorchen@gmail.com>",
  "license": "Mozilla Public License 2.0",
  "version": "0.5.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "publisher": "stanislav",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaermorchen/twig-language-server",
    "directory": "packages/vscode"
  },
  "files": [
    "out/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "Twig"
  ],
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "icon": "assets/logo.png",
  "scripts": {
    "vscode:prepublish": "tsc --build"
  },
  "contributes": {
    "configuration": {
      "title": "Modern Twig",
      "properties": {}
    },
    "languages": [
      {
        "id": "twig",
        "aliases": [
          "HTML (Twig)",
          "twig"
        ],
        "extensions": [
          ".twig",
          ".html.twig"
        ],
        "configuration": "./languages/twig.configuration.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "embedded_begin",
        "superType": "embedded_delimiter",
        "description": "Begin of embedded"
      },
      {
        "id": "embedded_end",
        "superType": "embedded_delimiter",
        "description": "End of embedded"
      },
      {
        "id": "null",
        "superType": "constant",
        "description": "null or none"
      },
      {
        "id": "boolean",
        "superType": "constant",
        "description": "true or false"
      }
    ],
    "configurationDefaults": {
      "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
          "embedded_delimiter": {
            "foreground": "#9AA83A"
          },
          "constant": {
            "foreground": "#D16969"
          }
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^20.2.6",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "twig-language-server": "^0.5.0",
    "vscode-languageclient": "^8.1.0"
  }
}
